<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_unselect"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:theme="@style/Theme.AppCompat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@color/tab_unselect"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.94">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/margin_35"
                    android:layout_height="@dimen/margin_35"
                    android:tint="@color/off_black"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_keyboard_arrow_left_black_36dp" />

                <ImageView
                    android:id="@+id/menu_btn"
                    android:layout_width="@dimen/margin_35"
                    android:layout_height="@dimen/margin_35"
                    android:tint="@color/off_black"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_action_name" />

                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="@dimen/margin_35"
                    android:layout_height="@dimen/margin_25"
                    android:tint="@color/off_black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_45"
                    android:layout_marginLeft="@dimen/margin_45"
                    android:background="@drawable/logo_bg" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/off_black"
                    android:textSize="@dimen/margin_15" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/off_black"
                    android:textSize="@dimen/margin_15" />

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.Toolbar>