<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_15"
                android:paddingStart="@dimen/margin_13"
                android:paddingEnd="@dimen/margin_13"
                android:paddingTop="@dimen/margin_13"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:layout_marginBottom="@dimen/margin_13"
                    android:tint="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_13"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9999999999"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_15"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_8"
                            android:text="@string/batuva_balace"
                            android:textColor="@color/button_bg"
                            android:textSize="@dimen/margin_15" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/edit_profile"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_30"
                        android:layout_weight="0.35"
                        android:background="@drawable/customborder"
                        android:gravity="center"
                        android:text="@string/edit_profile"
                        android:textColor="@color/button_bg"
                        android:textSize="@dimen/margin_13" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_13">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_13"
                    android:layout_marginStart="@dimen/margin_13"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/transition_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/transition_history_img"
                            android:layout_width="@dimen/margin_35"
                            android:layout_height="@dimen/margin_35"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/margin_13"
                            android:layout_marginStart="@dimen/margin_13"
                            android:text="@string/transition_history"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/background_light_gray" />


                    <LinearLayout
                        android:id="@+id/add_money_from_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_money_from_bank_img"
                            android:layout_width="@dimen/margin_35"
                            android:layout_height="@dimen/margin_35"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/margin_13"
                            android:layout_marginStart="@dimen/margin_13"
                            android:text="@string/add_money"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/background_light_gray" />

                    <LinearLayout
                        android:id="@+id/transfer_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/transfer_money_img"
                            android:layout_width="@dimen/margin_35"
                            android:layout_height="@dimen/margin_35"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/margin_13"
                            android:layout_marginStart="@dimen/margin_13"
                            android:text="@string/transfer_to_bank"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/background_light_gray" />

                    <LinearLayout
                        android:id="@+id/rate_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rate_us_img"
                            android:layout_width="@dimen/margin_35"
                            android:layout_height="@dimen/margin_35"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/margin_13"
                            android:layout_marginStart="@dimen/margin_13"
                            android:text="@string/rate_us"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/background_light_gray" />

                    <LinearLayout
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/share_img"
                            android:layout_width="@dimen/margin_35"
                            android:layout_height="@dimen/margin_35"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/margin_13"
                            android:layout_marginStart="@dimen/margin_13"
                            android:text="@string/share"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/background_light_gray" />


                    <LinearLayout
                        android:id="@+id/contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/contact_us_img"
                            android:layout_width="@dimen/margin_35"
                            android:layout_height="@dimen/margin_35"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/margin_13"
                            android:layout_marginStart="@dimen/margin_13"
                            android:text="@string/contact_us_menu"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/background_light_gray" />

                    <LinearLayout
                        android:id="@+id/feed_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/feed_back_img"
                            android:layout_width="@dimen/margin_35"
                            android:layout_height="@dimen/margin_35"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/margin_13"
                            android:layout_marginStart="@dimen/margin_13"
                            android:text="@string/feed_back"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/background_light_gray" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_13"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="@string/sign_out"
                    android:textColor="@color/button_bg"
                    android:textSize="@dimen/margin_15" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>